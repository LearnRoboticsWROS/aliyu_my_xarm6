<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="gemini_335_sim" params="">
    <material name="red">
      <color rgba="1 0 0 1"/>
    </material>

    <xacro:property name="XA6" value="$(find orbbec_description)"/>

    <link name="camera_link">
      <inertial>
        <origin xyz="-0.00936 -0.00003 -0.00273" rpy="0 0 0"/>
        <mass value="0.2197"/>
        <inertia ixx="0.00000429" ixy="0.0" ixz="0.000000025"
                 iyy="0.00000008" iyz="0.0" izz="0.00000427"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="file://${XA6}/meshes/gemini335_336/camera_link.STL"/>
        </geometry>
        <material name="red"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="file://${XA6}/meshes/gemini335_336/camera_link.STL"/>
        </geometry>
      </collision>
    </link>

    <!-- Attach camera to robot base -->
    <joint name="camera_joint" type="fixed">
      <parent link="link_base"/>
      <child link="camera_link"/>
      <origin xyz="0 0.5 0.9" rpy="-1.57 1.57 0"/>
    </joint>

    <link name="camera_optical_link"/>

    <joint name="camera_optical_joint" type="fixed">
      <parent link="camera_link"/>
      <child link="camera_optical_link"/>
      <origin xyz="0.05 0 0.025" rpy="-1.57 0 -1.57"/>
    </joint>

    <gazebo reference="camera_link">
      <sensor name="camera" type="depth">
        <always_on>true</always_on>
        <update_rate>10.0</update_rate>
        <visualize>true</visualize>
        <camera>
          <horizontal_fov>1.089</horizontal_fov>
          <image>
            <format>R8G8B8</format>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.05</near>
            <far>8.0</far>
          </clip>
        </camera>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <frame_name>camera_optical_link</frame_name>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:macro>

</robot>
